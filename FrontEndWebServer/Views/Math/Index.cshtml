@{
    ViewData["Title"] = "Home";
}

<h2>Math</h2>

<form action="Math/Doubled" method="post">
    <div class="form-horizontal">
        <h4>Number to be Doubled via Remoting Call:</h4>
        <div class="form-group">
            <input class="form-control" type="text" id="number" name="number" value="5" />
        </div>
        <input type="submit" value="Double" class="btn btn-default" />
    </div>
</form>
<hr />
<form action="Math/DoubledViaAPI" method="post">
    <div class="form-horizontal">
        <h4>Number to be Doubled via API:</h4>
        <div class="form-group">
            <input class="form-control" type="text" id="number" name="number" value="5" />
        </div>
        <h4>Back-end API url to use:</h4>
        <div class="form-group">
            Direct IP API Example: http://10.0.2.5:25000/
            <br />
            <br />
            Reverse Proxy API Example: http://localhost:19008/SFWorkshopPlacement/BackEndMathService/
        </div>
        <div class="form-group">
            <input class="form-control" type="text" id="backendurl" name="backendurl" value="http://localhost:19008/SFWorkshopPlacement/BackEndMathService/" />
        </div>
        <input type="submit" value="Double via API" class="btn btn-default" />
    </div>
</form>